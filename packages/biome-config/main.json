{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main",
		"root": "../../"
	},
	"json": {
		"assists": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"lineWidth": 100,
			"indentStyle": "space"
		},
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		},
		"linter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "space",
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"include": [
			"src/**/*.ts",
			"test/**/*.spec.ts"
		]
	},
	"files": {
		"ignoreUnknown": true
	},
	"organizeImports": {
		"enabled": false
	}
}