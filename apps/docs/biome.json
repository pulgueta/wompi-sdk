{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"extends": ["@pulgueta/wompi-biome-config/typescript"],
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	],
	"linter": {
		"ignore": ["dist/**", "node_modules/**"]
	}
}
